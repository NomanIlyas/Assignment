{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
{% endblock %}


{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h3>Csv Invoice</h3>
                <form action="{{ path('uploadCsv') }}" method="post" enctype="multipart/form-data">
                    <p>Upload CSV file:</p>
                    <div class="custom-file mb-3">
                        <input type="file" accept=".csv" class="custom-file-input csv-invoice-input" id="csvFile" name="csvInvoice">
                        <label class="custom-file-label csv-invoice-label" for="csvFile">Choose file</label>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary w">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mt-3">
                <a class="btn btn-primary" href="{{ path('invoiceListing') }}">List Invoices</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".csv-invoice-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".csv-invoice-label").addClass("selected").html(fileName);
        });
    </script>
{% endblock %}
