{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('Resources/jquery.dataTables.min.css') }}">
{% endblock %}


{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h2>Invoice Listing</h2>
                <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">Invoice Id</th>
                        <th scope="col">Invoice Amount</th>
                        <th scope="col">Selling Point</th>
                        <th scope="col">Due Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if invoices is not empty %}
                        {% for invoice in invoices %}
                            <tr>
                                <th scope="row">{{ invoice.invoiceId }}</th>
                                <td>{{ invoice.invoiceAmount }}</td>
                                <td>{{ invoice.sellingPrice }}</td>
                                <td>{{ invoice.dueDate|date('M d, Y') }}</td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <p class="h3"> {{ "Data Not Available"|trans }} </p>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mt-3">
                <a class="btn btn-primary btn-small" href="{{ path('homepage') }}">Main Page</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="{{ asset('Resources/invoice.js') }}"></script>
    <script src="{{ asset('Resources/jquery.dataTables.min.js') }}"></script>
{% endblock %}
